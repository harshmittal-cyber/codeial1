<li id="comment-<%= comment._id %>">
    <p>
        <% if(locals.user && locals.user.id==comment.user.id) {%>

            <small>
                <a href="/comments/destroy/<%= comment.id%>">X</a>
            </small>
        <% } %>
        <%=comment.content%><br>
        <small>
            <%=comment.user.name%>
        </small>

        <!-- chnage :display the like son comment if user logged in then show the link to toggle likes else just show the number -->
        <small>
            <% if(locals.user) { %>
                <a class="toggle-like-button" data-likes='<%= comment.likes.length %>' href="/likes/toggle/?id=<%=comment._id%>&type=Comment">
                    <%= comment.likes.length %>likes
                </a>
            <% }else{%>
                <%= comment.likes.length %>Likes
            <% } %>
        </small>
    </p>
</li>