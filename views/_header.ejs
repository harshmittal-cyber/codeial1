<header id="layout-header">
    <nav>
        <div class="mini-logo">
            <p>
                <a href="/">
                    codeial
                </a>
            </p>
        </div>

        <div class="auth-links">
            <ul>
                <% if (locals.user) { %>
                    <li>
                    <!-- when we click on name it redirect to user profile page -->
                        <a href="/users/profile"><%= user.name %></a>
                    </li>
                    <li>
                        <a href="/users/sign-out">Sign Out</a>
                    </li>
                    <img src="<%= user.avatar %>" alt="<%= user.name %>" width="25" height="25" style="border-radius: 50%; position: relative; top:-3px;" >

       
                <% }else{ %>
                    <li>
                        <a href="/users/sign-up">Sign Up</a>
                    </li>

                    <li>
                        <a href="/users/sign-in">Sign In</a>
                    </li>
                    
                <% } %>

            </ul>

        </div>

    </nav>
</header>
